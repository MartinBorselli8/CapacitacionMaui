<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlexLayoutDemo.FlexLayoutPage"
             Title="FlexLayoutPage">
    <FlexLayout Direction="Column">
        <Label Text="HEADER"
               FontSize="18"
               BackgroundColor="Aqua"
               HorizontalTextAlignment="Center"/>

        <!--GROW INDICA CUANTO ESPACIO DISPONIBLE QUEREMOS OCUPAR-->
        <FlexLayout FlexLayout.Grow="1">

            <Label Text="CONTENT"
                   FontSize="18"
                   BackgroundColor="Gray"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   FlexLayout.Grow="1"/>
            
            <!-- BASIS INDICA EL TAMAÃ‘O DEL BOXVIEW SEGUN LA CANTIDAD DE ELEMENTOS-->
            <!-- ORDER INDICA EN QUE ORDEN SE VA A MOSTRAR DENTRO DEL FLEXLAYOUT-->
            <BoxView FlexLayout.Basis="50"
                     FlexLayout.Order="-1"
                     Color="Blue"/>
            <BoxView FlexLayout.Basis="50"
                     FlexLayout.Order="1"
                     Color="Green"/>

        </FlexLayout>

        <Label Text="FOOTER"
               FontSize="18"
               BackgroundColor="Pink"
               HorizontalTextAlignment="Center"/>
    </FlexLayout>
</ContentPage>